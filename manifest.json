{
  "name": "Snov.io",
  "description": "Enrichment and Prospection with Snov.io",
  "source": "snov",
  "logo": "logo.png",
  "picture": "picture.png",
  "version": "1.0.0",
  "icons": [],
  "tags": [
    "outgoing",
    "oneColumn",
    "smart-notifier",
    "batch"
