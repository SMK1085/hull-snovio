          "overwrite": true,
          "service": "sourcePage"
        },
        {
          "hull": "traits_snov/source",
          "overwrite": true,
          "service": "source"
        },
        {
          "hull": "traits_snov/industry",
          "overwrite": true,
          "service": "industry"
        },
        {
